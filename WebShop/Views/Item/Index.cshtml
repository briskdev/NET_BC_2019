@model List<WebShop.Logic.Item>
@{
    ViewData["Title"] = "Items";
}

<div class="row">
    <div class="col-sm-4">
        <div class="list-group">
            <a href="#" class="list-group-item active">
                Electronics
            </a>
            <a href="#" class="list-group-item">Mobile <span class="badge">4</span></a>
            <a href="#" class="list-group-item">Computers <span class="badge">9</span></a>
            <a href="#" class="list-group-item">TV <span class="badge">0</span></a>
        </div>
        <div class="list-group">
            <a href="#" class="list-group-item active">
                Clothing
            </a>
            <a href="#" class="list-group-item">Men's clothing <span class="badge">0</span></a>
            <a href="#" class="list-group-item">Women's clothing <span class="badge">0</span></a>
            <a href="#" class="list-group-item">Kid's wear <span class="badge">0</span></a>
        </div>
    </div>
    <div class="col-sm-8">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Electronics</a></li>
            <li class="active">Mobile</li>
        </ol>
        <div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <img src="@item.Photo" />
                            <div class="caption text-center">
                                <h3>@item.Title</h3>
                                <p>Price: <span>$@item.Price</span></p>
                                <p><a href="#" class="btn btn-primary" role="button">Add to cart</a></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>