@model SignUpModel
@{
    ViewData["Title"] = "SignUp";
}

@Html.ValidationSummary()

<form class="form-horizontal" action="SignUp" method="post">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">E-pasts</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" id="inputEmail3" />
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Parole</label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control" id="inputPassword3">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Parole atkārtoti</label>
        <div class="col-sm-10">
            <input asp-for="PasswordRepeat" class="form-control" id="inputPassword3">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Reģistrēties</button>
        </div>
    </div>
</form>