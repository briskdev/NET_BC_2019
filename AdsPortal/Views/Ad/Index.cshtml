@model List<Ad>
@{
    ViewData["Title"] = "Sludinājumi";
}

<h2>TODO: Kategorijas nosaukums</h2>

<table class="table table-striped">
    <tr>
        <th style="width: 20%">Attēls</th>
        <th>Apraksts</th>
        <th style="width: 20%">Cena</th>
    </tr>
    @foreach(var ad in Model)
    {
        <tr>
            <td><img src="@ad.Photo" class="img-rounded img-responsive" /></td>
            <td><a asp-controller="Ad" asp-action="View" asp-route-id="@ad.Id">@ad.Description</a></td>
            <td>@String.Format("EUR {0:0.00}",ad.Price)</td>
        </tr>
    }
</table>